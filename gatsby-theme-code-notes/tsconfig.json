{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "./.storybook/**/*",
    "./cypress/**/*",
    "./static/scripts/**/*"
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx", "global.d.ts"]
}
